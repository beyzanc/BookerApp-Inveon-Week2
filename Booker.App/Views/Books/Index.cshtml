@model IEnumerable<Booker.App.Models.Book>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<div class="container mt-5">
    <h1>Kitap Listesi</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kitap Adı</th>
                <th>Yazar</th>
                <th>Yayın Yılı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                            @book.Title
                        </a>
                    </td>
                    <td>@book.Author</td>
                    <td>@book.PublicationYear</td>
                </tr>
            }
        </tbody>
    </table>
</div>
