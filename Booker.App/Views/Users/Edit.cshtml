@model Booker.App.Models.User

<h1>Kullanıcı Düzenle</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" id="UserName" name="UserName" class="form-control" value="@Model.UserName" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label for="FullName">Ad Soyad</label>
        <input type="text" id="FullName" name="FullName" class="form-control" value="@Model.FullName" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
<a asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>
