@model IEnumerable<Booker.App.Models.UserWithRolesViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Kullanıcılar</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Kullanıcı Ekle
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Roller</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Roles</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detaylar</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="AssignRole" asp-route-id="@user.Id" class="btn btn-success btn-sm">Rol Ata</a>
                        <a asp-action="RemoveRole" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Rol Kaldır</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
